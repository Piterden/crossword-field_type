<link href="/css/styles.css" rel="stylesheet" />

<div id="crossword">
    <input
      type="hidden"
      name="{{ field_type.input_name }}_width"
      {# :value="{{ field_type.value.width ?: 10 }}" #}
      v-model="width"
      {# data-field_name="{{ field_type.input_name }}_width" #}
      {{ html_attributes(field_type.attributes) }}
    />
    <input
      type="hidden"
      name="{{ field_type.input_name }}_height"
      {# :value="{{ field_type.value.height ?: 10 }}" #}
      v-model="height"
      {# data-field_name="{{ field_type.input_name }}_height" #}
      {{ html_attributes(field_type.attributes) }}
    />
    <input
      type="hidden"
      name="{{ field_type.input_name }}_blanks"
      {# :value="{{ field_type.value.blanks ?: '[]' }}" #}
      v-model="blanks"
      {# data-field_name="{{ field_type.input_name }}_blanks" #}
      {{ html_attributes(field_type.attributes) }}
    />
    <input
      type="hidden"
      name="{{ field_type.input_name }}_words"
      {# :value="{{ field_type.value.words ?: '[]' }}" #}
      v-model="JSON.stringify(words)"
      {# data-field_name="{{ field_type.input_name }}_blanks" #}
      {{ html_attributes(field_type.attributes) }}
    />
</div>

<script type="text/javascript" src="/js/manifest.js"></script>
<script type="text/javascript" src="/js/vendor.js"></script>
<script type="text/javascript" src="/js/app.js"></script>
